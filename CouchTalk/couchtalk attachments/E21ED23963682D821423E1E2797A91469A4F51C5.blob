/* global tags */
* {
  box-sizing: border-box;
}

body {
  background: #fff;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;;
  /*font-size: 15px;*/
  margin: 0;
  padding: 0;
}

code {
  background-color: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 3px;
  font-family: "Bitstream Vera Sans Mono", Consolas, Courier, monospace;
  font-size: 12px;
  margin: 0 2px;
  padding: 0px 5px;
}

h1, h2, h3, h4 {
  font-weight: bold;
  margin: 0 0 15px;
  padding: 0;
}

h1 {
  border-bottom: 1px solid #ddd;
  font-size: 2.5em;
  font-weight: bold;
  margin: 0 0 15px;
  padding: 0;
}

h2 {
  border-bottom: 1px solid #eee;
  font-size: 2em;
}

h3 {
  font-size: 1.5em;
}

h4 {
  font-size: 1.2em;
}

p, ul {
  margin: 0;
}

ul {
  /*list-style-type: none;*/
}

a {
  color: #4183c4;
  text-decoration: none;
}

a.active {
  font-weight: bold;
}

a:hover {
  /*color: #94651a;*/
  text-decoration: underline;
}

.clear {
  clear:both;
}

/* layout */

#container {
  margin:0;
  padding:4px;
}

/* CouchTalk */

#splash {
  text-align: center;
}

#splash input {
  font-size: 200%
}

#splash form button {
  font-size: 200%
}

.recording {
  color:#aa0003;
}

header {
  position: fixed;
  top: 0;
  right: 0;
  width: 340px;
  padding:5px;
}

header h2 {
  text-align: right;
  color: #ffac35;
  margin-right: 1em;
}

aside{
  margin-top: 2em;
  font-size: 86%;
  color:#888;
}

.shareLink {
  width: 100%;
}

video {
  border: 4px solid #000;
  box-sizing: content-box;
}

video.recording {
  border: 4px solid #f00;
}

ul.messages {
  margin-right: 340px;
  list-style-type: none;
  padding-left: 0;
}


ul.messages li {
  display: inline-block;
  margin: 0; padding: 4px;
}

ul.messages li img {
  border: 4px solid #fff;
  box-sizing: content-box;
  width:160px;
  height:120px;
}

img.ondeck {
  display: none;
}

ul.messages li img.joined {
  width: 80px;
  height: 60px;
  padding: 40px 30px;
}

ul.messages li img.playing {
  border: 4px solid #0f0;
}

ul.messages li img.played {
  border: 4px solid #aca;
}

ul.messages li img.unplayed {
  border: 4px solid #0a0;
}

ul.messages li img.noAudio {
  border: 4px solid #800;
  background: #000;
}

.autoplay {
  color:#0b0;
}
